<Window x:Class="MovieRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:MovieRental.ViewModels"
        Title="Retals" Height="400" Width="500">
    <Border Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Window Selections-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="RentalButton"
                        Content="Rentals"
                        Margin="0 0 5 0"/>
                <Button Name="CustomerButton"
                        Content="Customers"
                        Margin="0 0 5 0"/>
                <Button Name="InventoryButton"
                        Content="Inventory"
                        Margin="0 0 5 0"
                        Click="InventoryButton_Click"/>
                <Button Name="Help"
                        Content="Help"
                        Margin="0 0 5 0"/>
            </StackPanel>

            <!--Search Interface-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Name="CustomerIdLabel"
                       Grid.Row="0"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Content="Customer Id :"
                       FontWeight="Bold"/>
                <Label Name="CustomerLastNameLabel"
                       Grid.Row="1"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Content="Last Name :"
                       FontWeight="Bold"/>
                <Label Name="CustomerFirstNameLabel"
                       Grid.Row="2"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Content="First Name :"
                       FontWeight="Bold"/>

                <TextBox Name="CustomerIdTextBox"
                         Grid.Row="0"
                         Grid.Column="1"
                         Margin="5"
                         MinWidth="100"
                         HorizontalAlignment="Left"/>
                <TextBox Name="LastNameTextBox"
                         Grid.Row="1"
                         Grid.Column="1"
                         Margin="5"
                         MinWidth="100"
                         HorizontalAlignment="Left"/>
                <TextBox Name="FirstNameTextBox"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="5"
                         MinWidth="100"
                         HorizontalAlignment="Left"/>

                <Button Name="Search"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="3"
                        Content="Search"/>

                <ListBox Name="RentalSearchResultListBox"
                           Grid.Row="4"
                           Grid.Column="1"
                           Margin="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           MinWidth="385"
                           MinHeight="100"
                           Background="LightGray"/>
            </Grid>
        </Grid>
    </Border>
</Window>
