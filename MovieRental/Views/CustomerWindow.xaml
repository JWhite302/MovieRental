<Window x:Class="MovieRental.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:MovieRental.ViewModels"
        Title="Customer" Height="400" Width="500">
    <Window.DataContext>
        <viewModels:CustomerViewModel/>
    </Window.DataContext>
    <Border Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Window Selections-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="RentalButton"
                    Content="Rentals"
                    Margin="0 0 5 0"
                    Click="RentalButton_Click"/>
                <Button Name="CustomerButton"
                    Content="Customers"
                    Margin="0 0 5 0"/>
                <Button Name="InventoryButton"
                    Content="Inventory"
                    Margin="0 0 5 0"
                    Click="InventoryButton_Click"/>
            </StackPanel>

            <!--Search Interface-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Name="CustomerLastNameLabel"
                   Grid.Row="0"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Content="Last Name :"
                   FontWeight="Bold"/>
                <Label Name="CustomerFirstNameLabel"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Content="First Name :"
                   FontWeight="Bold"/>
                <Label Name="CustomerMembershipDateLabel"
                       Grid.Row="2"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Content="Membership Date :"
                       FontWeight="Bold"/>

                <TextBox Name="LastNameTextBox"
                     Grid.Row="0"
                     Grid.Column="1"
                     Margin="5"
                     MinWidth="100"
                     HorizontalAlignment="Left"
                     Text="{Binding SearchLastName, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Name="FirstNameTextBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"
                     MinWidth="100"
                     HorizontalAlignment="Left"
                     Text="{Binding SearchFirstName, UpdateSourceTrigger=PropertyChanged}"/>
                <DatePicker Name="MebershipTextBox"
                     Grid.Row="2"
                     Grid.Column="2"
                     Margin="5"
                     MinWidth="100"
                     HorizontalAlignment="Left"/>

                <Button Name="ButtonAdd"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="3"
                    Content="Add"
                    Command="{Binding SaveCustomerCommand}"/>

                <ListBox Name="CustomerSearchResultListBox"
                       Grid.Row="5"
                       Grid.Column="1"
                       Margin="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       MinWidth="385"
                       MinHeight="100"
                       Background="LightGray"
                       ItemsSource="{Binding SearchResults}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding LastName}"></TextBox>
                                <TextBox Text="{Binding FirstName}"></TextBox>
                                <TextBox Text="{Binding MembershipDate}"></TextBox>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Border>
</Window>
