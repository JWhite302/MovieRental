<Window x:Class="MovieRental.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRental"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:MovieRental.ViewModels"
        Title="Inventory" Height="400" Width="500">
    <Window.DataContext>
        <viewModels:InventoryViewModel/>
    </Window.DataContext>
    <Border Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Window Selections yeet-->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="RentalButton"
                Content="Rentals"
                Margin="0 0 5 0"
                Click="RentalButton_Click"/>
                <Button Name="CustomerButton"
                Content="Customers"
                Margin="0 0 5 0"
                Click="CustomerButton_Click"/>
                <Button Name="InventoryButton"
                Content="Inventory"
                Margin="0 0 5 0"/>
            </StackPanel>

            <!--Search Interface-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Name="MovieTitleLabel"
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Content="Movie Title :"
                FontWeight="Bold"/>
                <Label Name="MovieReleaseYearLabel"
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Content="Release Year :"
                FontWeight="Bold"/>
                <Label Name="MovieGenreLabel"
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Content="Genre :"
                FontWeight="Bold"/>


                <TextBox Name="MovieTitleTextBox"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="5"
                 MinWidth="100"
                 HorizontalAlignment="Left"
                 Text="{Binding SearchTitle, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Name="MovieReleaseYearTextBox"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="5"
                 MinWidth="100"
                 HorizontalAlignment="Left"
                 Text="{Binding SearchReleaseYear, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Name="MovieGenreTextBox"
                 Grid.Row="2"
                 Grid.Column="2"
                 Margin="5"
                 MinWidth="100"
                 HorizontalAlignment="Left"
                 Text="{Binding SearchGenre, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Name="ButtonAdd"
                Grid.Row="4"
                Grid.Column="0"
                Margin="3"
                Content="Add"
                Command="{Binding SaveMovieCommand}"/>

                <ListBox Name="InventorySearchResultListBox"
                   Grid.Row="5"
                   Grid.Column="1"
                   Margin="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   MinWidth="385"
                   MinHeight="100"
                   Background="LightGray"
                   ItemsSource="{Binding SearchResults}"
                   >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding Title}"></TextBox>
                                <TextBox Text="{Binding ReleaseYear}"></TextBox>
                                <TextBox Text="{Binding Genre}"></TextBox>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Border>
</Window>
